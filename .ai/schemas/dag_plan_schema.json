{  "$schema": "http://json-schema.org/draft-07/schema#",  "title": "DAG Execution Plan",  "type": "object",  "properties": {    "plan_id": {      "type": "string",      "description": "Unique identifier for this execution plan"    },    "branch_base": {      "type": "string",      "description": "Base branch for git operations"    },    "global_budget_usd": {      "type": "number",      "description": "Total budget allocation for this plan"    },    "nodes": {      "type": "array",      "items": {        "type": "object",        "properties": {          "id": {"type": "string"},          "tool": {"type": "string"},          "goal": {"type": "string"},          "dependencies": {            "type": "array",            "items": {"type": "string"}          },          "path_claims": {            "type": "array",            "items": {              "type": "object",              "properties": {                "path": {"type": "string"},                "mode": {"enum": ["exclusive", "shared"]}              }            }          },          "estimated_cost": {"type": "number"},          "priority": {"type": "integer"},          "timeout_seconds": {"type": "integer"},          "capabilities": {            "type": "array",            "items": {"type": "string"}          }        },        "required": ["id", "tool", "goal"]      }    },    "merge_policy": {      "type": "object",      "properties": {        "strategy": {"enum": ["merge-queue", "direct"]},        "checklist": {          "type": "array",          "items": {"type": "string"}        }      }    }  },  "required": ["plan_id", "nodes"]}