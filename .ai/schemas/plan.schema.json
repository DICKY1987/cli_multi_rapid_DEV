{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/edit-plan.json",
  "title": "AI Edit Plan",
  "type": "object",
  "additionalProperties": false,
  "required": ["edits"],
  "properties": {
    "metadata": {"type": "object", "additionalProperties": false, "properties": {
      "plan_id": {"type": "string"},
      "created_at": {"type": "string", "format": "date-time"},
      "created_by": {"type": "string"},
      "description": {"type": "string"},
      "pre_edit_checksums": {"type": "object", "additionalProperties": {"type": "string"}}
    }},
    "edits": {"type": "array", "minItems": 1, "items": {"$ref": "./edit_schema.json"}}
  }
}
