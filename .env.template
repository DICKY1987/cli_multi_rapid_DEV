# CLI Orchestrator Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# AI Service API Keys
# ========================================

# Anthropic Claude API Key (for AI-powered code editing)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (optional, for alternative AI services)
OPENAI_API_KEY=your_openai_api_key_here

# Google AI API Key (optional, for Gemini integration)
GOOGLE_API_KEY=your_google_api_key_here

# ========================================
# CLI Orchestrator Configuration
# ========================================

# Environment mode (development, production, testing)
CLI_ORCHESTRATOR_ENV=development

# Maximum token budget for AI operations
MAX_TOKEN_BUDGET=500000

# Default workflow timeout in minutes
DEFAULT_WORKFLOW_TIMEOUT=30

# ========================================
# External Services
# ========================================

# Redis connection URL
REDIS_URL=redis://redis:6379

# Git configuration
GIT_USER_NAME=CLI Orchestrator
GIT_USER_EMAIL=cli-orchestrator@example.com

# ========================================
# Development Configuration
# ========================================

# Enable debug logging
DEBUG=true

# Hot reload for development
HOT_RELOAD=true

# Coverage reporting
ENABLE_COVERAGE=true