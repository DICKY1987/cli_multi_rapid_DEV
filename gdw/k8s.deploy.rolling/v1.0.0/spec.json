{
  "id": "kube.deploy.rolling",
  "version": "1.0.0",
  "summary": "Apply manifests and wait for rollout",
  "maturity": "candidate",
  "inputs": {
    "manifests": {"type": "string", "default": "deploy/"}
  },
  "outputs": {"deployment": "string"},
  "steps": [
    {"id": "apply", "runner": "kubectl", "cmd": "apply -f ${manifests}", "timeout_sec": 120},
    {"id": "rollout", "runner": "kubectl", "cmd": "rollout status deployment", "timeout_sec": 300}
  ],
  "determinism": {"tool_versions": {"kubectl": "1.30.0"}}
}
