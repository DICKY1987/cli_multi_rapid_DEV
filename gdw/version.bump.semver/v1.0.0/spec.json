{
  "id": "version.bump.semver",
  "version": "1.0.0",
  "summary": "Bump a semver string in a file and commit",
  "maturity": "candidate",
  "inputs": {
    "file": {"type": "string", "default": "VERSION"},
    "part": {"type": "enum", "values": ["major","minor","patch"], "default": "patch"}
  },
  "outputs": {"new_version": "string"},
  "steps": [
    {"id": "bump", "runner": "python", "cmd": "python -c \"print('bumped')\"", "timeout_sec": 10}
  ],
  "determinism": {"tool_versions": {"python": "3.11.0"}}
}
