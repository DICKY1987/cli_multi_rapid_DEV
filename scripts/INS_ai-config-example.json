{
  "_comment": "AI Toolchain Installer - Example Configuration File",
  "_description": "This file showcases all available configuration options. Copy to .ai/ai-config.json and customize as needed.",

  "python_version": "3.11",
  "node_channel": "LTS",

  "install": {
    "_comment": "Control which components to install",
    "docker": true,
    "ollama": true,
    "aider": true,
    "pipx": true,
    "wsl2_features": false
  },

  "docker": {
    "_comment": "Docker Desktop configuration",
    "auto_start_desktop": false,
    "wait_for_engine": true,
    "add_user_to_group": true,
    "startup_timeout_minutes": 6
  },

  "aliases": {
    "_comment": "AI CLI aliases and helpers configuration",
    "enable_advanced": true,
    "enable_codex_mapping": true,
    "enable_qol_helpers": true
  },

  "python_requirements": {
    "_comment": "Pinned Python package versions - modify as needed",
    "pip": ">=24.0",
    "setuptools": ">=70.0",
    "wheel": ">=0.43",
    "pydantic": "==2.7.4",
    "httpx": "==0.27.0",
    "tenacity": "==8.4.1",
    "numpy": "==1.26.4",
    "pandas": "==2.2.2",
    "redis": "==5.0.4",
    "fastapi": "==0.111.0",
    "uvicorn": "==0.30.1",
    "typer": "==0.12.3",
    "PyYAML": "==6.0.1",
    "tiktoken": "==0.7.0",
    "openai": "==1.40.0",
    "anthropic": "==0.34.2",
    "langchain": "==0.2.6",
    "langchain-community": "==0.2.6",
    "langgraph": "==0.2.29",
    "duckdb": "==1.0.0"
  },

  "_usage_examples": {
    "_comment": "How to use different configurations",
    "minimal_setup": {
      "install": {
        "docker": false,
        "aider": false,
        "pipx": false,
        "wsl2_features": false
      },
      "aliases": {
        "enable_advanced": false,
        "enable_codex_mapping": false,
        "enable_qol_helpers": false
      }
    },
    "full_ai_development": {
      "install": {
        "docker": true,
        "aider": true,
        "pipx": true,
        "wsl2_features": true
      },
      "docker": {
        "auto_start_desktop": true,
        "wait_for_engine": true
      },
      "aliases": {
        "enable_advanced": true,
        "enable_codex_mapping": true,
        "enable_qol_helpers": true
      }
    },
    "docker_focused": {
      "install": {
        "docker": true,
        "wsl2_features": true
      },
      "docker": {
        "auto_start_desktop": true,
        "startup_timeout_minutes": 10
      }
    }
  }
}
