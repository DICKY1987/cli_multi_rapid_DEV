# CLI Multi-Rapid Enterprise Orchestration Platform
# Unified Environment Configuration

# =============================================================================
# AI Service API Keys (Required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
GOOGLE_API_KEY=your-google-gemini-key-here
GEMINI_API_KEY=your-google-gemini-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///./workflow_executions.db
POSTGRES_DB=cli_multi_rapid
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration (Quota Tracking & Caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# AI Service Configuration
# =============================================================================
# Gemini API settings
GEMINI_MODEL=gemini-1.5-pro
GEMINI_DAILY_LIMIT=1000

# Claude API settings
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_DAILY_LIMIT=25

# Ollama local settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama:7b

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_PORT=8000

# =============================================================================
# Self-Healing System Configuration
# =============================================================================
SELF_HEALING_ENABLED=true
SELF_HEALING_MAX_ATTEMPTS=3
SELF_HEALING_BASE_BACKOFF_SECONDS=2

# =============================================================================
# Git Integration Configuration
# =============================================================================
GIT_ENABLED=true
GIT_USER_NAME=CLI Multi-Rapid Bot
GIT_USER_EMAIL=bot@cli-multi-rapid.local
DEFAULT_BRANCH=main
ALLOWED_BRANCH_PREFIXES=lane/,feature/,hotfix/,bugfix/
PROTECTED_BRANCHES=main,master,develop

# =============================================================================
# Cross-Language Bridge Configuration
# =============================================================================
BRIDGE_ENABLED=true
MQL4_CONFIG_PATH=config/mql4_config.mqh
POWERSHELL_CONFIG_PATH=config/powershell_config.ps1
PYTHON_CONFIG_PATH=config/python_config.json

# =============================================================================
# Monitoring & Observability
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# =============================================================================
# MinIO S3-Compatible Storage
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# Local Development Overrides
# =============================================================================
# DROP_TOKEN=replace-with-a-long-random-string
# SAVE_BASE_DIR=C:\AI\agent_out
# ALLOW_PATTERNS=src/**,tests/**,.ai/**
# REPO_DIR=C:\AI\repo
# ALLOW_LOCALHOST_NO_TOKEN=1

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =============================================================================
# Cost Management
# =============================================================================
DAILY_COST_LIMIT_USD=10.00
WEEKLY_COST_LIMIT_USD=50.00
MONTHLY_COST_LIMIT_USD=200.00
COST_ALERTS_ENABLED=true

# =============================================================================
# Workflow Orchestration
# =============================================================================
WORKFLOW_ENGINE_ENABLED=true
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT_SECONDS=3600

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_DATABASE_URL=sqlite:///./test_workflow_executions.db
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_COVERAGE_THRESHOLD=85
